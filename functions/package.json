{
  "name": "functions",
  "type": "module",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "lint": "eslint .",
    "serve:dev": "firebase use dev && firebase emulators:start --only functions",
    "deploy:dev": "firebase use dev && firebase deploy --only functions",
    "serve:prod": "firebase use prod && firebase emulators:start --only functions",
    "deploy:prod": "firebase use prod && firebase deploy --only functions",
    "logs:dev": "firebase functions:log --project dev",
    "logs:prod": "firebase functions:log --project prod"
  },
  "engines": {
    "node": "22"
  },
  "main": "index.js",
  "dependencies": {
    "@google-cloud/tasks": "^5.5.1",
    "cors": "^2.8.5",
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.6.0",
    "google-auth-library": "^9.15.0",
    "nodemailer": "^6.9.14",
    "stripe": "^16.10.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "eslint": "^8.15.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.4.1"
  },
  "private": true
}
